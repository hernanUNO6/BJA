<Window x:Class="Bja.Registro.frmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio de sesión" Height="170" Width="270" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Name="InicioDeSesion">
        <Label x:Name="lblUsuario" Content="Usuario" HorizontalAlignment="Left" Margin="28,17,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="23" Margin="83,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160"/>
        <Label x:Name="lblClave" Content="Contraseña" HorizontalAlignment="Left" Margin="8,45,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="pasContrasena" HorizontalAlignment="Left" Margin="83,48,0,0" VerticalAlignment="Top" Width="160" Height="23"/>
        <Button x:Name="cmdAceptar" IsDefault="True" Content="Aceptar" HorizontalAlignment="Left" Margin="76,96,0,0" VerticalAlignment="Top" Width="75" Click="cmdAceptar_Click"/>
        <Button x:Name="cmdCancelar" IsCancel="True" Content="Cancelar" HorizontalAlignment="Left" Margin="168,96,0,0" VerticalAlignment="Top" Width="75" Click="cmdCancelar_Click"/>
    </Grid>
</Window>
