<Window x:Class="Bja.Registro.frmPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema del Bono Juana Azurduy de Padilla" Height="300" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid Name="Principal">
        <Menu HorizontalAlignment="Left" Margin="5,5,0,0" Height="25" VerticalAlignment="Top" Width="480">
            <MenuItem Header="_Archivo" x:Name="menArchivo">
                <MenuItem Header="Cambiar contraseña" x:Name="menCamCon" Click="menCamCon_Click"/>
                <Separator/>
                <MenuItem Header="Salir" x:Name="menSalir" Click="menSalir_Click"/>
            </MenuItem>
            <MenuItem Header="_Datos" x:Name="menDatos">
                <MenuItem Header="Buscar" x:Name="menBusFam" Click="menBusFam_Click"/>
                <Separator/>
                <MenuItem Header="Nueva familia" x:Name="menNueFam" Click="menNueFam_Click" />
                <Separator/>
                <MenuItem Header="Buscar madre" x:Name="menBusMad" />
                <Separator/>
                <MenuItem Header="Buscar menor" x:Name="menBusMen" />
                <Separator/>
                <MenuItem Header="Buscar tutor" x:Name="menBusTut" />
                <Separator/>
                <MenuItem Header="Búsqueda avanzada" x:Name="menBusAva" />
            </MenuItem>
            <MenuItem Header="_Reportes" x:Name="mnuReporte">
                <MenuItem Header="Reporte 1" x:Name="menRep01" />
                <MenuItem Header="Reporte 2" x:Name="menRep02" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
