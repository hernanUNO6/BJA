@model IEnumerable<Bja.Entidades.Provincia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageScripts{
<script type="text/javascript">
    $(document).ready(function () {
        $("#Buscar").click(function () {
            if ($("#criterioBusqueda").attr('Value').trim() == "")
            {
                $("#criterioBusqueda").val("");
                $("#criterioBusqueda").focus();
                return false;
            }
        });
    });
</script>    
}

<h2>Provincias Resgistrados</h2>

<p>
    @Html.ActionLink("Registrar Provincia", "Create", null, new {@class="btn btn-primary"})
</p>

<form method="get">
    <input type="text" name="criterioBusqueda" id="criterioBusqueda" />
    <input type="submit" value="Buscar" id="Buscar" class="btn btn-primary" />
</form>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Departamento.Codigo)*@
            Departamento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento.Descripcion)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
            @{ string nombreControlador = "Provincias"; }
            <a href="@Url.Action("Edit/"+ item.Id, nombreControlador)" title="Editar"><img src="@Url.Content("~/Images/edit16.png")" style="border:none" /></a>
            <a href="@Url.Action("Details/"+ item.Id, nombreControlador)" title="Detalles"><img src="@Url.Content("~/Images/detail16.png")"  style="border:none" /></a>
            <a href="@Url.Action("Delete/"+ item.Id, nombreControlador)" title="Eliminar"><img src="@Url.Content("~/Images/delete16.png")"  style="border:none" /></a>
        </td>
    </tr>
}
    <tr>
        <td colspan="4" class="pagina">
@{
    if (ViewBag.paginaActual == null)
    {
        ViewBag.paginaActual = 1;
    }
    
    if (ViewBag.criterioBusqueda == null)
    {
        ViewBag.criterioBusqueda = "";
    }
    
    @Html.ActionLink("<<", "index", new { paginaActual = 1, criterioBusqueda = ViewBag.criterioBusqueda }, new { @class="btn", @title="Primero" })
    @Html.ActionLink("<", "index", new { paginaActual = (ViewBag.paginaActual - 1), criterioBusqueda = ViewBag.criterioBusqueda }, new { @class="btn", @title="Anterior" })
    @Html.Name(" Página ") @ViewBag.paginaActual @Html.Name(" de ") @ViewBag.totalPaginas @Html.Name(" ")
    @Html.ActionLink(">", "index", new { paginaActual = (ViewBag.paginaActual + 1), criterioBusqueda = ViewBag.criterioBusqueda }, new { @class="btn", @title="Siguiente" })
    @Html.ActionLink(">>", "index", new { paginaActual = (ViewBag.totalPaginas), criterioBusqueda = ViewBag.criterioBusqueda }, new { @class="btn", @title="Último" })
    @Html.Name("Total registros : ") @ViewBag.totalRegistros
}
        </td>
    </tr>

</table>
