@model Bja.Entidades.EstablecimientoSalud

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageScripts{
<script src="/Scripts/jquery-ui-1.8.20.js"></script>
<script src="/Scripts/jquery.ui.datepicker-es.js"></script>
<script src="/Scripts/jquery.maskedinput.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#IdDepartamento").change(function () {
            fillCombo("cboIdProvincia", $("#IdDepartamento").val());
        });

        $("#cboIdProvincia").change(function () {
            fillCombo2("cboIdMunicipio", $("#cboIdProvincia").val());
        });

        function fillCombo(updateId, value) {
            $.getJSON('@Url.Action("ProvinciasPorDepartamento")' + "/" + value, {},
                function (myData) {
                    $("#" + updateId).empty();
                    $("#" + updateId).append("<option value=''>--Selecione Provincia--</option>");
                    $('#IdProvincia').val("");
                    $.each(myData, function (i, item) {
                        //alert(item.Descripcion);
                        $("#" + updateId).append("<option value='" + item.Id + "'>" + item.Descripcion + "</option>");
                    })
                });
        }

        function fillCombo2(updateId, value) {
            $.getJSON('@Url.Action("MunicipiosPorProvincia")' + "/" + value, {},
                function (myData) {
                    $("#" + updateId).empty();
                    $("#" + updateId).append("<option value=''>--Selecione Municipio--</option>");
                    $('#IdMunicipio').val("");
                    $.each(myData, function (i, item) {
                        //alert(item.Descripcion);
                        $("#" + updateId).append("<option value='" + item.Id + "'>" + item.Descripcion + "</option>");
                    })
                });
        }

        $("#cboIdProvincia").change(function () {
            $('#IdProvincia').val($('#cboIdProvincia').val());
        })


        $("#cboIdMunicipio").change(function () {
            $('#IdMunicipio').val($('#cboIdMunicipio').val());
        })

    });
</script>    
}


