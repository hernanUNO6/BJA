<script type="text/javascript">
    $(document).ready(function () {
        $("#IdDepartamento").change(function () {
            fillCombo("IdProvincia", $("#IdDepartamento").val(), '@Url.Action("ProvinciasPorDepartamento")', "... Seleccione Provincia ...");
            $("#IdMunicipio").empty();
