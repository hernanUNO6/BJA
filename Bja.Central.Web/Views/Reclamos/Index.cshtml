@model IEnumerable<Bja.Entidades.Reclamo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reclamos</h2>

<p>
    @Html.ActionLink("Registrar Reclamo", "Create", null, new {@class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FechaReclamo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdTipoReclamo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreBeneficiario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DetalleReclamo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.FechaReclamo)*@
            @item.FechaReclamo.ToString("dd/MM/yyyy")
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.IdTipoReclamo)*@
            @ViewBag.TiposReclamos[item.IdTipoReclamo]
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreBeneficiario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DetalleReclamo)
        </td>
        <td>
            @{ string nombreControlador = "Reclamos"; }
            <a href="@Url.Action("Edit/"+ item.Id, nombreControlador)" title="Editar"><img src="@Url.Content("~/Images/edit16.png")" style="border:none" /></a>
            <a href="@Url.Action("Details/"+ item.Id, nombreControlador)" title="Detalles"><img src="@Url.Content("~/Images/detail16.png")"  style="border:none" /></a>
            <a href="@Url.Action("Delete/"+ item.Id, nombreControlador)" title="Eliminar"><img src="@Url.Content("~/Images/delete16.png")"  style="border:none" /></a>
        </td>
    </tr>
}

</table>
